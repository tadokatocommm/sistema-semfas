// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UnitType {
  id    String @id @default(cuid())
  name  String @unique
  units Unit[]

  @@map("unit_types")
}

model Unit {
  id         String @id @default(cuid())
  name       String @unique
  users      User[]

  unitTypeId String
  unitType   UnitType @relation(fields: [unitTypeId], references: [id])

  @@map("units")
}

// ATUALIZADO: Tabela de Utilizadores com os novos campos
model User {
  id           String   @id @default(cuid())
  fullName     String   @map("full_name") // Nome Completo
  cpf          String   @unique           // CPF 
  state        String                     // Estado
  city         String                     // Cidade
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Chave Estrangeira para a Unidade Espec√≠fica
  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id])

  @@map("users")
}
